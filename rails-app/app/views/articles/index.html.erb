<%= render_if @highlights[0].present?, 'longer_feature', article: @highlights[0] %>
<div class="row mb-2">
    <%= render_if @highlights[1].present?, 'medium', article: @highlights[1] %>
    <%= render_if @highlights[2].present?, 'medium', article: @highlights[2] %>
</div>

<div class="row g-5">
    <div class="col-md-8">
      <h3 class="pb-4 mb-4 fst-italic border-bottom">
        From the Firehose
      </h3>
    

        <%= link_to 'New Article', new_article_path, class: 'btn btn-success' if user_signed_in? %>
        <%= render @articles %>

        <%= render 'pagination' %>
    </div>

    <%= render 'sidebar' %>
</div>

<%= content_for :category_filter do %>
  <div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between">
      <% @categories.each do |category| %>
        <%= link_to category.name, root_path(category: category.name), 
          class:"p-2 link-secondary #{'category-active' if category.id.to_s == params[:category]}" %>
      <% end %>
    </nav>
  </div>
<% end %>

